@using our
@inherits UmbracoTemplatePage<our.Models.SearchResultContentModel>

@{
    Layout = "~/Views/Layout.cshtml";
}

<div class="plain">
<!-- search OVERVIEW START -->
	<section class="search-results">
		<div>
			<!-- FORUM HEADER START -->
			<div class="forum-archive-header">
				<ul id="breadcrumb">
					<li><a href="/" rel="nofollow">Our Umbraco</a></li>
					<li><a href="#" rel="nofollow">Search</a></li>
					<li><a href="#" rel="nofollow">@Model.Content.Results.SearchTerm</a></li>
				</ul>

				
                <form action="/search" >
				    <div class="search-big">
                        <input type="search" name="term" required value="@Model.Content.Results.SearchTerm">
					    <label for="search">Search</label>
				    </div>
                </form>

				<div class="clear"></div>
			</div>

			<section>

				<ul class="search-all-results docs-search-listing">

				
                    @foreach (var result in Model.Content.Results.SearchResults)
                    {
                        <li>   
                         <a href="@result.FullUrl()">
							<div class="type-icon">
								<i class="@result.GetIcon()"></i>
							</div>

							<div class="type-context">
								<div class="type-name">@result.GetTitle()</div>
								<div class="type-description">@result.Fields["body"].Truncate(300)</div>
							</div>
						 </a>
                            </li>
                    }
                    </ul>
				

			</section> <!-- Search end -->

		</div>
	</section>
	<!-- search OVERVIEW END -->
</div>